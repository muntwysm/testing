<li>
  <%= image_tag("http://www.gravatar.com/avatar.php?gravatar_id=#{Digest::MD5::hexdigest(user.email)}", :alt => 'Avatar', :class => 'avatar', :width => '30') %>
  <%= link_to h(user.name), user %>


	<!-- Destroy not needed  
  | <%= link_to "delete", user, :method => :delete, :confirm => "You sure?" %>
	-->
<% if current_user.admin? %>
		<% if user.active? %>
		-   <%= link_to "Deactivate", "users/toggle_active/#{user.id}" %>
		<% else %>
		-   <%= link_to "Activate", "users/toggle_active/#{user.id}" %>
		<% end %>
		
		<% if user.admin? %>
		-   <%= link_to "Remove Admin", "users/toggle_admin/#{user.id}" %>
		<% else %>
		-   <%= link_to "Make Admin", "users/toggle_admin/#{user.id}" %>
		<% end %>
  <% end %>
</li>
